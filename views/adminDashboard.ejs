<!-- adminDashboard.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="Cache-Control" content="no-store, no-cache, must-revalidate">
    <meta http-equiv="Pragma" content="no-cache">
    <meta http-equiv="Expires" content="0">
    <title>Admin Dashboard</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/styles.css">
    <style>
        body{
            background-image: url('https://img.freepik.com/premium-vector/sports-background-vector-sports-day_1316704-45433.jpg?w=2000');
            background-size: cover;
             background-position: center;
            background-repeat: no-repeat;
        }
        header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        header > div {
            margin-left: 20px; /* Adjust margin as needed */
        }

        header .text-center {
            flex-grow: 1;
        }

        header ul {
            margin-right: 20px; /* Adjust margin as needed */
        }
        .border-light-emission {
            border: 1px solid transparent;
            box-shadow: 0 0 10px rgba(255, 255, 255, 0.5); /* Change the color to white shades */
            transition: box-shadow 0.3s ease; /* Add a smooth transition effect */
        }

        .border-light-emission:hover {
            box-shadow: 0 0 20px rgba(255, 255, 255, 0.7); /* Adjust the color and opacity for the hover effect */
        }
    </style>
    <script>
        function deleteSession(id) {
            const csrfToken = document.querySelector('input[name="_csrf"]').value;
            fetch(`/delete-session/${id}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json',
                    'CSRF-Token': csrfToken,
                },
            })
            .then((res) => {
                if (res.ok) {
                    window.location.reload();
                }
            })
            .catch((err) => console.error(err));
        }

    </script>
</head>
<body class="bg-gray-100">
    <header class="text-white py-4 fixed w-full top-0 z-20" style="background-color: orange;">
        <div class="header-inner" style="display: flex; align-items: center; justify-content: space-between;">
            <div class="left">
                <div>
                    <p>Welcome..! <%= admin.firstName + " " + admin.lastName %></p>
                    <p>Mail: <%= admin.email %></p>
                </div>
            </div>
            <h1 class="text-2xl font-semibold" style="margin: 0 auto;">Admin Dashboard</h1>
            <div class="right"></div>
        </div>
    </header>

    <!-- Sidebar Navigation -->
    <button id="sidebarToggleBtn" class="btn btn--orange" style="position: fixed; top: 90px; left: 10px; z-index: 40;">â˜°</button>
    <aside id="sidebarNav" style="position: fixed; top: 80px; left: 0; height: 100vh; width: 200px; background: #fff; z-index: 30; display: flex; flex-direction: column; align-items: flex-start; padding: 24px 12px 0 12px; box-shadow: 2px 0 8px rgba(0,0,0,0.08); transition: transform 0.3s ease;">
        <button id="sidebarCloseBtn" class="btn btn--orange" style="align-self: flex-end; font-size: 1.25rem;">&times;</button>
        <button id="sidebarAddSport" class="w-full mb-4 btn btn--blue text-left">Add Sport</button>
        <button id="sidebarAddSession" class="w-full mb-4 btn btn--green text-left">Add Session</button>
        <a href="/signout" class="w-full mb-4 btn btn--red text-center block">Sign Out</a>
        <a href="#reports" class="w-full btn btn--purple text-center block">Reports</a>
    </aside>
    
    <div class="w-2/2 overflow-y-auto h-full">
        <main class="container mx-auto mt-20 pl-4 pr-8" style="background: rgba(255,255,255,0.7); border-radius: 16px; box-shadow: 0 4px 24px rgba(0,0,0,0.08); padding: 24px;">
            <section id="manage-sports-section" class="h-full">
                <h2 class="text-2xl font-semibold mb-4">Your Sports</h2>
                <%- include('adminSportsList.ejs', { sports: sports, sessions, joinedSessions, allPlayers,admin }) %>
            </section>
            

            <!-- The Add Sport button is now in the sidebar -->
            <!-- Modal Popup for Add Sport -->
            <div id="modalOverlaySport" style="display:none; position: fixed; top:0; left:0; width:100vw; height:100vh; background: rgba(0,0,0,0.4); z-index: 50; justify-content: center; align-items: center;">
                <div style="background: rgba(255,255,255,0.97); border-radius: 16px; box-shadow: 0 4px 24px rgba(0,0,0,0.18); padding: 32px; max-width: 400px; margin: auto; position: relative;">
                    <button id="closeModalBtnSport" style="position: absolute; top: 8px; right: 12px; font-size: 1.5rem; background: none; border: none; cursor: pointer;">&times;</button>
                    <form id="createSportForm" action="/create-sport" method="post" class="h-full mx-auto">
                        <input type="hidden" name="adminId" value="<%= admin.id %>" class="hidden">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                        <div class="mb-4">
                            <label for="sportName" class="block text-gray-700 text-sm font-bold mb-2">Sport Name:</label>
                            <input type="text" id="sportName" name="name" required class="w-full border border-gray-300 p-2 rounded">
                        </div>

                        <div class="mb-6">
                            <button type="submit" class="w-full bg-blue-500 text-white p-3 rounded hover:bg-blue-700 focus:outline-none focus:shadow-outline-blue">Create Sport</button>
                        </div>
                    </form>
                </div>
            </div>


            <!-- The Add Session button is now in the sidebar -->
            <!-- Modal Popup for Add Session -->
            <div id="modalOverlay" style="display:none; position: fixed; top:0; left:0; width:100vw; height:100vh; background: rgba(0,0,0,0.4); z-index: 50; justify-content: center; align-items: center;">
                <div style="background: rgba(255,255,255,0.97); border-radius: 16px; box-shadow: 0 4px 24px rgba(0,0,0,0.18); padding: 32px; max-width: 400px; margin: auto; position: relative;">
                    <button id="closeModalBtn" style="position: absolute; top: 8px; right: 12px; font-size: 1.5rem; background: none; border: none; cursor: pointer;">&times;</button>
                    <form id="createSessionForm" action="/create-session" method="post" class="h-full mx-auto">
                        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                        <div class="mb-4">
                            <label for="sportId">Sport:</label>
                            <select id="sportId" name="sportId" required>
                            <% sports.forEach(sport => { %>
                                <option value="<%= sport.id %>"><%= sport.name %></option>
                            <% }); %>
                            </select>
                        </div>
                        <input type="hidden" name="creator" value="<%= admin.email %>">

                        <div class="mb-4">
                            <label for="date" class="block text-gray-700 text-sm font-bold mb-2">Date:</label>
                            <input type="date" id="date" name="date" class="w-full border border-gray-300 p-2 rounded" required>
                        </div>

                        <div class="mb-4">
                            <label for="time" class="block text-gray-700 text-sm font-bold mb-2">Time:</label>
                            <input type="time" id="time" name="time" class="w-full border border-gray-300 p-2 rounded" required>
                        </div>
                        
                        <div class="mb-4">
                            <label for="venue" class="block text-gray-700 text-sm font-bold mb-2">Venue:</label>
                            <input type="text" id="venue" name="venue" class="w-full border border-gray-300 p-2 rounded" required>
                        </div>
                        
                        <div class="mb-4">
                            <label for="teamSize" class="block text-gray-700 text-sm font-bold mb-2">Team-Size :</label>
                            <input type="text" name="teamSize" class="w-full border border-gray-300 p-2 rounded" required>
                        </div>
                        
                        <div class="mb-6">
                            <button type="submit" class="w-full bg-blue-500 text-white p-3 rounded hover:bg-blue-700 focus:outline-none focus:shadow-outline-blue">Create Session</button>
                        </div>
                    </form>
                </div>
            </div>
            
        </main>
    </div>
    <div id="reports" class="w-2/2 overflow-y-auto h-full">
        <main class="container mx-auto m-4 pl-4 pr-8" style="background: rgba(255,255,255,0.7); border-radius: 16px; box-shadow: 0 4px 24px rgba(0,0,0,0.08); padding: 24px;">
            <div class="mb-4">
                <h2 class="text-2xl font-semibold">Database Reports</h2>
            </div>
    
            <div>
                <p class="mb-2 text-lg font-semibold"><strong>Total Sessions Played:</strong> <%= allSessions.length %></p>
            
                <h3 class="mb-2 text-lg font-semibold"><strong>Relative Popularity of Sports :</strong> </h3>
                <ul class="text-lg font-medium">
                    <% 
                    const sportsMap = {};
                    allSessions.forEach(session => {
                        const sportId = session.sportId;
                        const sport = allSports.find(sport => sport.id === sportId);
                        
                        if (sport) {
                            const sportName = sport.name;
                
                            if (!sportsMap[sportName]) {
                                sportsMap[sportName] = 1;
                            } else {
                                sportsMap[sportName]++;
                            }
                        }
                    });
                
                    const sortedSports = Object.keys(sportsMap).sort((a, b) => sportsMap[b] - sportsMap[a]);
                
                    sortedSports.forEach(sportName => { %>
                        <li class="hover:bg-gray-100 transition duration-300"><span class="text-violet-900"><%= sportName %></span> : <%= sportsMap[sportName] %> session(s)</li>
                    <% }); %>
                </ul>
                
            </div>
            
            
        </main>
    </div>
    
    <footer class="bg-gray-800 text-white py-4 mt-8 z-20">
        <div class="container mx-auto flex items-center justify-between">
            <p>&copy; 2024 Admin Dashboard</p>
            <button id="scrollToTopBtn" class="bg-black-500 text-white px-4 py-2 rounded hover:bg-gray-700 focus:outline-none focus:shadow-outline-blue ml-auto">Scroll to Top</button>
        </div>
    </footer>

    <script>
        function scrollToTop() {
            window.scrollTo({
                top: 0,
                behavior: 'smooth'
            });
        }

        const scrollToTopBtn = document.getElementById('scrollToTopBtn');
        scrollToTopBtn.addEventListener('click', scrollToTop);
        // JavaScript to toggle the form visibility with slide-down animation

        // Sidebar open/close logic
        const sidebarToggleBtn = document.getElementById('sidebarToggleBtn');
        const sidebarNav = document.getElementById('sidebarNav');
        const sidebarCloseBtn = document.getElementById('sidebarCloseBtn');
        let sidebarOpen = true;
        function openSidebar() {
            sidebarNav.style.transform = 'translateX(0)';
            sidebarToggleBtn.style.display = 'none';
            sidebarOpen = true;
        }
        function closeSidebar() {
            sidebarNav.style.transform = 'translateX(-220px)';
            sidebarToggleBtn.style.display = 'block';
            sidebarOpen = false;
        }
        sidebarToggleBtn.addEventListener('click', openSidebar);
        sidebarCloseBtn.addEventListener('click', closeSidebar);
        // Start with sidebar open
        openSidebar();

        // Modal logic for Add Sport (sidebar button)
        const sidebarAddSport = document.getElementById('sidebarAddSport');
        const modalOverlaySport = document.getElementById('modalOverlaySport');
        const closeModalBtnSport = document.getElementById('closeModalBtnSport');
        sidebarAddSport.addEventListener('click', function () {
            modalOverlaySport.style.display = 'flex';
        });
        closeModalBtnSport.addEventListener('click', function () {
            modalOverlaySport.style.display = 'none';
        });
        modalOverlaySport.addEventListener('click', function (e) {
            if (e.target === modalOverlaySport) {
                modalOverlaySport.style.display = 'none';
            }
        });

        // Modal logic for Add Session (sidebar button)
        const sidebarAddSession = document.getElementById('sidebarAddSession');
        const modalOverlay = document.getElementById('modalOverlay');
        const closeModalBtn = document.getElementById('closeModalBtn');
        sidebarAddSession.addEventListener('click', function () {
            modalOverlay.style.display = 'flex';
        });
        closeModalBtn.addEventListener('click', function () {
            modalOverlay.style.display = 'none';
        });
        modalOverlay.addEventListener('click', function (e) {
            if (e.target === modalOverlay) {
                modalOverlay.style.display = 'none';
            }
        });
    </script>
</body>
</html>