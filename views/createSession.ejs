<style>
    .create-session-container {
        background: #fff;
        border-radius: 16px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.15);
        padding: 32px 24px;
        max-width: 400px;
        margin: 48px auto;
        display: flex;
        flex-direction: column;
        gap: 16px;
    }
    .create-session-container label {
        font-weight: 500;
        margin-bottom: 4px;
        display: block;
    }
    .create-session-container input,
    .create-session-container select {
        width: 100%;
        padding: 8px 10px;
        margin-bottom: 12px;
        border: 1px solid #ccc;
        border-radius: 6px;
        font-size: 15px;
        box-sizing: border-box;
    }
    .create-session-container button[type='submit'] {
        background: #007bff;
        color: #fff;
        border: none;
        border-radius: 6px;
        padding: 10px 0;
        font-size: 16px;
        cursor: pointer;
        transition: background 0.2s;
    }
    .create-session-container button[type='submit']:hover {
        background: #0056b3;
    }
</style>

<div class="create-session-container">
    <form method="post" action="/create-session">
        <label for="sportId">Sport:</label>
        <select id="sportId" name="sportId" required>
        <% sports.forEach(sport => { %>
                <option value="<%= sport.id %>"><%= sport.name %></option>
        <% }); %>
        </select>

        <label for="creator">Creator:</label>
        <select  id="creator" name="creator" required>
        <% sports.forEach(sport => { %>
                <option value="<%= sport.id %>"><%= sport.adminId %></option>
        <% }); %>
        </select>

        <label for="date">Date:</label>
        <input type="date" id="date" name="date" required>

        <label for="time">Time:</label>
        <input type="time" id="time" name="time" required>

        <label for="venue">Venue:</label>
        <input type="text" id="venue" name="venue" required>

        <label for="teamSize">Team-Size :</label>
        <input type="text" name="teamSize" required>

        <button type="submit">Create Session</button>
    </form>
</div>